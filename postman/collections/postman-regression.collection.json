    {
      "name": "03 - Filter By User",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"All posts belong to userId=1\", function () {",
              "  const data = pm.response.json();",
              "  pm.expect(Array.isArray(data)).to.eql(true);",
              "  data.forEach(item => pm.expect(item.userId).to.eql(1));",
              "});",
              "",
              "pm.test(\"Response is array of post schema\", function () {",
              "  const itemSchema = {",
              "    type: \"object\",",
              "    required: [\"userId\", \"id\", \"title\", \"body\"],",
              "    properties: {",
              "      userId: { type: \"number\" },",
              "      id: { type: \"number\" },",
              "      title: { type: \"string\" },",
              "      body: { type: \"string\" }",
              "    }",
              "  };",
              "",
              "  const schema = {",
              "    type: \"array\",",
              "    items: itemSchema",
              "  };",
              "",
              "  pm.response.to.have.jsonSchema(schema);",
              "});",
              ""
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
